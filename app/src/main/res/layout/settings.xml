<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B49701"
            app:titleTextColor="@color/backgroundColor"
            android:title="Settings"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <!-- CardView cho phần Play Music -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music Settings"
                    app:titleTextColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <Switch
                    android:id="@+id/switchPlayMusic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Play background music" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView cho phần ẩn/hiện thông tin khách hàng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Info Settings"
                    app:titleTextColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <Switch
                    android:id="@+id/switchShowAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Address" />

                <Switch
                    android:id="@+id/switchShowElectricUsage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Electric Usage" />

                <Switch
                    android:id="@+id/switchShowUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show User Type" />


                <Switch
                    android:id="@+id/switchShowPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Final Price" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
